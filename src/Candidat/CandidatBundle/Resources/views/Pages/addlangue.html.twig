                  {% for flashMessage in app.session.flashbag.get('msgnonsup') %}
              <div class="form-row"><font color="red">Erreur de suppression</font></div>
{% endfor %}               
                
              <form method="POST" action="{{path('candidat_addlangue')}}" class="form-contact-us" {{ form_enctype(form)}}>
{{form_widget(form)}}
                      <button type="submit"  class="btn-primary btn">ajouter</button>
    </form>
 {% if candidat is not null%}
     
     {% for l in candidat%}
      
      <div class="row" id="ff">
            <div class="page-header">
                Vous parlez :<font size=+2>{{l.idLangue.langue}}</font>
                    | Niveau :<font size=+2>{{l.idNiveauLangue.niveau}}</font>
            </div>
        <div><a href="{{path('candidat_editlangue',{'id': l.idNivLangu})}}">Modifier</a>
        <a href="{{path('candidat_deletelangue',{'id': l.idNivLangu})}}">Supprimer</a></div>  </div>
      {%endfor%}
                 
      {%endif%}
           </div>
          </div>
        </div>
     
  
     {%endblock%} 
    
    
    
    
    