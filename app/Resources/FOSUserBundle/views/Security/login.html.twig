{%extends  '::base.html.twig'%}
{% block body%}
<br></br><br></br>

{% trans_default_domain 'FOSUserBundle' %}


<div class="content">
    <div class="container">
        <div class="page-header">
            <h1>Se connecter sur BETA.MR</h1>
        </div>
            

        <div class="row">
            <div class="span6 offset3">
                <h4 class="widget-header"><i class="icon-lock"></i>Connexion  </h4>
                {% if error %}
<div > <font color="red">{{ error|trans }}</font></div>
{% endif %}

                <div class="widget-body">
                    <div class="center-align">
                        <form class="form-horizontal form-signin-signup" action="{{ path("fos_user_security_check") }}" method="POST">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" id="password" name="_password" required="required" />

                            <div class="remember-me">
                    <div class="pull-left">
                        <label class="checkbox"><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label></label></div>
<div class="pull-right"><a href="{{path('fos_user_resetting_request')}}">J'ai oubli√© mon mot de passe</a>
                    </div><div class="clearfix"></div>
                  </div>
                            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary btn-large" />
                        </form>
                        <h4><i class="icon-question-sign"></i> Vous n'avez pas de comtpe?</h4>
                        <a href="{{path('fos_user_registration_register')}}" class="btn btn-large bottom-space">S'inscrire</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


{% endblock  %}
